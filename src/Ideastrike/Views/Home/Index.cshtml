@using System.Web.Optimization
@using Ideastrike.Helpers
@using Ideastrike.Models
@Html.Partial("ErrorAlert")
<h1>@ViewBag.Title</h1>

@MarkdownHelper.Markdown(ViewBag.WelcomeMessage)
<ul class="pills">
    <li id="popular">
        <a href="@Url.Action("Index", "Home")">
            @Ideastrike.Localization.Strings.Home_Popular
        </a>
    </li>
    <li id="top">
        <a href="@Url.Action("Top", "Home")">
            @Ideastrike.Localization.Strings.Home_Top
        </a>
    </li>
    <li id="new">
        <a href="@Url.Action("New", "Home")">
            @Ideastrike.Localization.Strings.Home_New
        </a>
    </li>
</ul>
@Html.Partial("/Views/JSTemplates/idea.cshtml")
<ul id="ideas">
</ul>
<div id="LoadingPage">&nbsp;</div>

@section PageScript {
    <script type="text/javascript">
        var currentPage = 0;
        var pageCount = @ViewBag.PageCount;
        var sortOrder = '@ViewBag.SortOrder';
        var ideaUrl = '@Url.Action("GetIdeas", "Home")';
        (function () {
            "use strict";
            ideastrike.viewBag.selected = '@ViewBag.Selected';
        } ());
    </script>
    <script type="text/javascript" src="@BundleTable.Bundles.ResolveBundleUrl("~/scripts/home/home")"></script>
}